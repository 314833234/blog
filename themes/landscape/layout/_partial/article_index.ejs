<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %> article-index" itemscope itemprop="blogPost">
  <div>
      <div class="article-inner">
          <%- partial('post/gallery') %>
          <% if (post.link || post.title){ %>
          <header class="article-header article-header-index">
              <%- partial('post/title', {class_name: 'article-title'}) %>
              <div class="article-post-title">
                  <span><i class="iconfont icon-date"></i> 发表于 <%- partial('post/date_index', {class_name: 'article-date', date_format: null}) %></span>
                  <span>|</span>
                  <span><i class="iconfont icon-category"></i> 分类于 <%- partial('post/category_index') %></span>

                  <div class="article-post-desc">
                      <%- post.description %>
                  </div>
              </div>
          </header>
          <% } %>
          <footer class="article-footer article-footer-index">
              <!--<a data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link"><%= __('share') %></a>-->
              <% if (post.comments && config.disqus_shortname){ %>
              <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link"><%= __('comment') %></a>
              <% } %>
              <%- partial('post/tag') %>
          </footer>
      </div>
      <% if (!index){ %>
      <%- partial('post/nav') %>
      <% } %>
  </div>
</article>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>